{
  "compilerOptions": {
    "incremental": true,
    "target": "es2017",
    "outDir": "../build/main",
    "rootDirs": ["../src"],
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "preserveSymlinks": true,
    "jsx": "react-jsx",
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "strict": true,

    "lib": ["es2017", "dom"],
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "typeRoots": ["../node_modules/@types", "../src/types"],
    "baseUrl": "../",
    // "paths": {
    //   "@lib/*": ["./src/lib/*"]
    // }
  },
  "include": [
    "../src/**/*.ts",
    "../src/**/*.tsx",
    "../src/**/*.test.tsx",
    "../src/**/*.stories.tsx",
    "../.storybook/**/*.tsx"
  ],
  "exclude": [
    "../node_modules/**",
  ],
  "compileOnSave": false
}
